@model Dental_Manager.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/LoginForm.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">

                    <div class="px-5 ms-xl-4">
                        <i class="fa-solid fa-tooth fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                        <span class="h1 fw-bold mb-0">Dental Manager</span>
                    </div>

                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-0 pt-5 pt-xl-0 mt-xl-n5">
                       
                        @using (Html.BeginForm("Login", "Employee", FormMethod.Post))
                        {
                            @* @Html.ValidationSummary(true, "", new { @class = "text-danger" }) *@

                            <form id="loginForm" action="/Employee/Login" method="post" style="width: 23rem;">

                                <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login</h3>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="exampleInputEmail1">Employee Name</label>
                                    @Html.TextBoxFor(model => model.EmployeeName, new { @class = "form-control form-control-lg", @autofocus = "autofocus" })
                                </div>

                                <div class="form-outline mb-4">
                                    <label for="exampleInputPassword1" class="form-label">Password</label>
                                    @Html.PasswordFor(model => model.EmployeePassword, new { @class = "form-control form-control-lg" })
                                </div>

                                <div class="pt-1 mb-4">
                                    <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                                </div>

                                @*<p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">Forgot password?</a></p> *@
                                <p>Don't have an account? <a href="@Url.Action()" class="link-info">Register here</a></p>

                            </form>

                        }
                    </div>
                </div>

                <div class="col-sm-6 px-0 d-none d-sm-block position-relative" style="height: 100vh;">
                    <video class="w-100 h-100" style="object-fit: cover; object-position: left; position: absolute; top: 0; left: 0%;" autoplay muted loop>
                        <source src="~/video/smile.mp4" type="video/mp4">
                    </video>
                </div>




            </div>
        </div>
    </section>

    <script>
        // Ngăn chặn hành vi mặc định của form và thực hiện đăng nhập bằng Ajax
        document.getElementById("loginForm").addEventListener("submit", function (event) {
            // Ngăn chặn hành vi mặc định của form
            event.preventDefault();

            // Lấy dữ liệu từ form
            var formData = new FormData(document.getElementById("loginForm"));

            fetch("/Employee/Login", {
                method: "POST",
                body: formData
            })
                .then(response => {
                    if (response.ok) {
                        window.location.href = "/Employee/Index";
                    } else {
                        console.error("Đăng nhập thất bại");
                    }
                })
                .catch(error => {
                    console.error("Đã xảy ra lỗi:", error);
                });
        });
    </script>

</body>
</html>


