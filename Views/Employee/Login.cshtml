@model Dental_Manager.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/LoginForm.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">

                    <div class="px-5 ms-xl-4">
                        <i class="fa-solid fa-tooth fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                        <span class="h1 fw-bold mb-0">Dental Manager</span>
                    </div>

                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-0 pt-5 pt-xl-0 mt-xl-n5">
                        @using (Html.BeginForm("Login", "Employee", FormMethod.Post))
                        {

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Username</label>
                                @Html.TextBoxFor(model => model.EmployeeName, new { @class = "form-control", @placeholder = "Username....." })
                            </div>

                            <div class="mb-4">
                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                @Html.PasswordFor(model => model.EmployeePassword, new { @class = "form-control", @placeholder = "Password....." })
                            </div>

                            <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Sign in</button>
                        }

                    </div>
                </div>

                <div class="col-sm-6 px-0 d-none d-sm-block position-relative" style="height: 100vh;">
                    <video class="w-100 h-100" style="object-fit: cover; object-position: left; position: absolute; top: 0; left: 0%;" autoplay muted loop>
                        <source src="~/video/smile.mp4" type="video/mp4">
                    </video>
                </div>

            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>


