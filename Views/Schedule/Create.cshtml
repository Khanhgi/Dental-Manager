@model Dental_Manager.Models.EmployeeSchedule

@{
    ViewData["Title"] = "Create Schedule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create Schedule</h1>

<hr />
<div class="row" style="display:flex;margin-top: 5rem;">
    <div class="col-md-4" style="margin: auto;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input placeholder="hh:mm" asp-for="Time" class="form-control" pattern="^([01]?[0-9]|2[0-3]):[0-5][0-9]$" title="Please enter a valid time (hh:mm)" required />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

